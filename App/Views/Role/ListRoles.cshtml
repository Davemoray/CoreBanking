@using Microsoft.AspNetCore.Identity;
@using App.ViewModels;

@model IEnumerable<ApplicationRole>


@{
    ViewData["Title"] = "All Roles";
    
}
<h1>List of Roles </h1>

@if (Model.Any())
{
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Roles</th>
            <th>Enable/Disable</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Name</td>
            <td>
                @if (role.IsEnabled == true)
                    {
                        <label class ="Switch"> 
                        <input type="checkbox" disabled class="Switch__Input" checked>
                        <span class ="Slider"></span>
                            </label>
                        }
                        else
                        {
                            <label class ="Switch"> 
                        <input type="checkbox" disabled class="Switch__Input">
                        <span class ="Slider"></span>
                            </label> 
                        }
            </td>

            <td>
               
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Role" 
                    asp-route-id="@role.Id">Edit</a>
                
                
                @*<a asp-controller="Role" asp-action="DeleteRole" asp-route-id="@role.Id" 
                type="submit" method="post" class="btn btn-danger" 
                onclick="return confirm ('Are you sure you want to delete user:@role.Name')">Disable </a>*@
            </td>
        </tr>
        }
    </tbody>
</table>

   <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Role"> Add new role</a>


}

 else
 {
     <div class="card">
         <div class="card-header">
             No roles created yet
         </div>
         <div class="card-body">
             <h5 class="card-title">
                 use the button below to create a role
             </h5>
             <a class="btn btn-primary" style="width:auto" asp-controller="Role" asp-action="CreateRole">
                 Create Role
             </a>
         </div>
     </div>
 }


